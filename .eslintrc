{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "sourceType": "module"
  },
  // for react to be more compatible
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  // needed to include ./index.js for the eslinter to properly work
  "extends": ["airbnb", "airbnb/hooks"],
  "rules": {
    // not worth my time prefering export defaults so these rules help with that
    "import/prefer-default-export": "off",
    "import/no-default-export": "error",
    // removes the single quote rule
    "avoidEscape": true
  },
  "overrides": [
    {
      "files": ["test/*.spec.js"], // Or *.test.js
      "rules": {
        "require-jsdoc": "off"
      }
    }
  ]
}
